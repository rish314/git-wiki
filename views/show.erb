<div class="row-fluid">
  <div class="span10">
    <article>
      <div class="btn-toolbar">
        <div class="btn-group">
          <% unless @page.rev %>
          <button class="btn btn-mini btn-primary" onclick="parent.location='/page/edit/<%= @page.name %>'">edit</button>
          <% else %>
          <button class="btn btn-mini disabled btn-primary">edit</button>
          <% end %>
        </div>
        <div class="btn-group">
          <button class="btn btn-mini" onClick="parent.location='/page/history/<%= @page.name %>'">history</button>
          <% if @page.previous_commit %>
          <button class="btn btn-mini" onclick="parent.location='/page/commit/<%= @page.name %>/<%= @page.previous_commit %>'">previous</a></button>
          <% else %>
          <button class="btn btn-mini disabled">previous</a></button>
          <% end %>
          <% if @page.next_commit %>
          <button class="btn btn-mini" onclick="parent.location='/page/commit/<%= @page.name %>/<%= @page.next_commit %>'">next</a></button>
          <% else %>
          <button class="btn btn-mini disabled">next</a></button>
          <% end %>
          <% if @page.rev %>
          <button class="btn btn-mini" onclick="parent.location='/page/show/<%= @page.name %>'">latest</a></button>
          <% else %>
          <button class="btn btn-mini disabled">latest</a></button>
          <% end %>
        </div>
      </div>

      <h1><%= @page.name.gsub('_', ' ') %></h1>
    
      <%= @page.body %>
    </article> 
  </div>
  <div class="span2">
    <div class="well sidebar">
     <aside>
       <%= @page.updated_at.time_ago_in_words %>
       <br/>
       <%= repo.current_branch %> branch
     <aside>
    </div><!--/.well -->
  </div><!--/span-->
</div><!--/row-->


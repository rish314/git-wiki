<div class="row-fluid">
  <div class="span10">
    <article>
      <% if @pages.empty? %>
        <h1>No pages yet</h1>
      <% else %>
        <h1>All pages</h1>

        <table class="table table-striped table-condensed">
          <thead>
            <tr>
              <th>Actions</th>
              <th>Page</th>
              <th>Last Commit</th>
            </tr>
          </thead>
          <tbody>
            <% @pages.each do |page| %>
            <tr>
              <td>
                  <button class="btn btn-mini btn-primary" onclick="parent.location='/page/show/<%= page.name %>'">show</button>
                  <button class="btn btn-mini" onclick="parent.location='/page/edit/<%= page.name %>'">edit</button>
                  <button class="btn btn-mini" onclick="parent.location='/page/history/<%= page.name %>'">history</button>
              </td> 
              <td>
                 <%= page.name %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </article> 
  </div>
  <div class="span2">
    <div class="well sidebar">
     <aside>
       <%= repo.current_branch %> branch
     <aside>
    </div><!--/.well -->
  </div><!--/span-->
</div><!--/row-->




<article>
  <h1>Branches</h1>

  <ol>
  <% @branches.each do |b| %>
    <% next if b.full == 'origin/master' %>
    <li>
    <% if b.current %>
      <strong><%= b.full %></strong>
    <% else %>
      <%= b.full %>
      <a href="/repo/branch/<%= b.name %>">switch</a> &bull;
      <a href="/repo/merge_branch/<%= b.name %>">merge</a>
      <!-- &bull; <a href="/repo/delete_branch/<%= b.name %>">delete</a> -->
    <% end %>
    </li>
  <% end %>
  </ol>
</article>

<article>
  <h1>New Branch</h1>
  <form method="post" action="/repo/new_branch" class="niceform">
    <label for="name">name</label>
    <input type="text" name="branch" />
    <br />

    <input type="hidden" name="type" value="derive" />

    <!--
    <label for="derive_radio">copy this branch</label>
    <input type="radio" name="type" value="derive" />
    <br />

    <label for="blank_radio">empty branch</label>
    <input type="radio" name="type" value="blank" />
    <br />
    -->

    <label for="submit"></label>
    <input type="submit" value="create" class="submit" />
  </form>
</article>

<article>
  <h1>New Remote Branch</h1>
  <form method="post" action="/repo/new_remote" class="niceform">
    <label for="branch_name">name</label>
    <input type="text" name="branch_name">
    <br />

    <label for="branch_url">url</label>
    <input type="text" name="branch_url">
    <br />

    <label for="submit"></label>
    <input type="submit" value="create" class="submit" />
  </form>
</article>

